{
  "openapi": "3.1.0",
  "info": {
    "title": "Intervals.icu Training Coach Proxy",
    "version": "5.3.0",
    "description": "Cloudflare proxy for URF reports. ChatGPT never sees raw activities/wellness."
  },

  "servers": [
    { "url": "https://intervalsicugptcoach.clive-a5a.workers.dev" }
  ],

  "paths": {
    "/run_weekly": {
      "get": {
        "summary": "Generate a weekly URF report (7-day)",
        "operationId": "runWeeklyReportV2",
        "parameters": [
          {
            "in": "query",
            "name": "staging",
            "schema": { "type": "integer", "enum": [0, 1] },
            "required": false,
            "description": "Use 1 to route request through the staging Railway environment."
          },
          {
            "in": "query",
            "name": "owner",
            "schema": { "type": "string" },
            "required": false,
            "description": "Optional owner flag for internal routing (e.g., 'intervals')."
          }
        ],
        "responses": {
          "200": {
            "description": "Weekly URF report output",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ReportResponse" }
              }
            }
          }
        }
      }
    },

    "/run_season": {
      "get": {
        "summary": "Generate a season URF report (90-day block)",
        "operationId": "runSeasonReportV2",
        "parameters": [
          {
            "in": "query",
            "name": "staging",
            "schema": { "type": "integer", "enum": [0, 1] },
            "required": false,
            "description": "Use 1 to route request through the staging Railway environment."
          },
          {
            "in": "query",
            "name": "owner",
            "schema": { "type": "string" },
            "required": false,
            "description": "Optional owner flag for internal routing (e.g., 'intervals')."
          }
        ],
        "responses": {
          "200": {
            "description": "Season URF report output",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ReportResponse" }
              }
            }
          }
        }
      }
    },

    "/run_wellness": {
      "get": {
        "summary": "Generate a 42-day wellness URF report",
        "operationId": "runWellnessReportV2",
        "parameters": [
          {
            "in": "query",
            "name": "staging",
            "schema": { "type": "integer", "enum": [0, 1] },
            "required": false,
            "description": "Use 1 to route request through the staging Railway environment."
          },
          {
            "in": "query",
            "name": "owner",
            "schema": { "type": "string" },
            "required": false,
            "description": "Optional owner flag for internal routing (e.g., 'intervals')."
          }
        ],
        "responses": {
          "200": {
            "description": "Wellness URF report output",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ReportResponse" }
              }
            }
          }
        }
      }
    },

    "/run_summary": {
      "get": {
        "summary": "Generate a URF high-level summary",
        "operationId": "runSummaryReportV2",
        "parameters": [
          {
            "in": "query",
            "name": "staging",
            "schema": { "type": "integer", "enum": [0, 1] },
            "required": false,
            "description": "Use 1 to route request through the staging Railway environment."
          },
          {
            "in": "query",
            "name": "owner",
            "schema": { "type": "string" },
            "required": false,
            "description": "Optional owner flag for internal routing (e.g., 'intervals')."
          }
        ],
        "responses": {
          "200": {
            "description": "Summary URF output",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ReportResponse" }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "ReportResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "report_type": { "type": "string" },
          "markdown": { "type": ["string", "null"] },
          "semantic_graph": { "type": ["object", "null"] },
          "logs": { "type": ["string", "null"] }
        }
      }
    }
  },

